generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id     String @id @default(uuid())
  name   String
  cities City[]
}

model City {
  id        String  @id @default(uuid())
  name      String
  countryId String
  country   Country @relation(fields: [countryId], references: [id])
  routes    Route[]
}

model Route {
  id     String @id @default(uuid())
  name   String
  cityId String
  city   City   @relation(fields: [cityId], references: [id])
}
